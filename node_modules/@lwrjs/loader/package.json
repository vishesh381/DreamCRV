{
    "name": "@lwrjs/loader",
    "description": "LWR's client-side module loader",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.16.4",
    "homepage": "https://developer.salesforce.com/docs/platform/lwr/overview",
    "repository": {
        "type": "git",
        "url": "https://github.com/salesforce-experience-platform-emu/lwr.git",
        "directory": "packages/@lwrjs/loader"
    },
    "bugs": {
        "url": "https://github.com/salesforce-experience-platform-emu/lwr/issues"
    },
    "type": "module",
    "types": "build/index.d.ts",
    "main": "build/cjs/index.cjs",
    "module": "build/index.js",
    "exports": {
        ".": {
            "import": "./build/index.js",
            "require": "./build/cjs/index.cjs"
        },
        "./types": {
            "import": "./build/types.js"
        },
        "./prod-error-shim": "./build/assets/prod/lwr-error-shim.js",
        "./prod-loader-shim": "./build/assets/prod/lwr-loader-shim.js",
        "./prod-loader-shim-bundle": "./build/assets/prod/lwr-loader-shim.bundle.js",
        "./prod-loader-shim-bundle-min": "./build/assets/prod/lwr-loader-shim.bundle.min.js",
        "./prod-loader-shim-legacy": "./build/assets/prod/lwr-loader-shim-legacy.js",
        "./prod-loader-shim-legacy-bundle": "./build/assets/prod/lwr-loader-shim-legacy.bundle.js",
        "./prod-loader-shim-legacy-bundle-min": "./build/assets/prod/lwr-loader-shim-legacy.bundle.min.js",
        "./package": "./package.cjs"
    },
    "files": [
        "build/*.js",
        "build/**/*.js",
        "build/**/*.cjs",
        "build/**/*.d.ts",
        "package.cjs"
    ],
    "scripts": {
        "test:browser": "rm tsconfig.tsbuildinfo; yarn build; JEST_PUPPETEER_CONFIG=jest-puppeteer.config.cjs jest --verbose --config jest.browser.config.cjs",
        "test:browser:ci": "rm tsconfig.tsbuildinfo; yarn build; JEST_PUPPETEER_CONFIG=jest-puppeteer.config.cjs jest --runInBand --no-cache --config jest.browser.config.cjs",
        "test:browserLegacy": "rm tsconfig.tsbuildinfo; yarn build; JEST_PUPPETEER_CONFIG=jest-puppeteer-legacy.config.cjs jest --verbose --config jest.browser-legacy.config.cjs",
        "test:browserLegacy:ci": "rm tsconfig.tsbuildinfo; yarn build; JEST_PUPPETEER_CONFIG=jest-puppeteer-legacy.config.cjs jest --runInBand --no-cache --config jest.browser-legacy.config.cjs",
        "start:testserver": "node build/__tests__/shim/browser/test_server.js",
        "start:testserverLegacy": "node build/__tests__/shim-legacy/browser/test_server.js",
        "build:platform": "yarn build:shim && yarn build:error-shim && node ./scripts/platform-versioning.js",
        "build:shim:bundle": "rollup --config scripts/rollup-shim-bundle.config.cjs && rollup --config scripts/rollup-shim-legacy-bundle.config.cjs && rollup --config scripts/rollup.moduleBundle.config.cjs",
        "build:shim:bundle:minify": "MINIFY=true yarn build:shim:bundle",
        "build:shim": "rollup --config scripts/rollup-shim.config.cjs",
        "build:loader": "rollup --config scripts/rollup.config.cjs",
        "build:error-shim": "rollup --config scripts/rollup-error-shim.config.cjs",
        "build:ts": "tsc -b",
        "build": "yarn build:ts && yarn build:error-shim && yarn build:shim && yarn build:loader && yarn build:shim:bundle && yarn build:shim:bundle:minify"
    },
    "devDependencies": {
        "@locker/trusted-types": "0.23.6",
        "@lwrjs/diagnostics": "0.16.4",
        "@lwrjs/types": "0.16.4",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-sucrase": "^5.0.2",
        "@rollup/plugin-terser": "^0.4.4",
        "rollup": "^2.79.2"
    },
    "dependencies": {
        "@lwrjs/client-modules": "0.16.4",
        "@lwrjs/shared-utils": "0.16.4"
    },
    "lwc": {
        "modules": [
            {
                "dir": "build/modules"
            }
        ],
        "expose": [
            "lwr/esmLoader",
            "lwr/loader",
            "lwr/loaderLegacy"
        ]
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "volta": {
        "extends": "../../../package.json"
    },
    "gitHead": "66c3fb551a00f76bd5d7cfa176ff7b72fa20d0f2"
}
